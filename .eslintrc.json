{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard", 
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react", 
        "only-warn"
    ],
    "rules": {
        "react/prop-types": 0, 
        "prefer-const": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
